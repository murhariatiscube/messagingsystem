 <%= error_messages_for(@user)%>
 <table summary="User form fields">
		
		
		<tr>
			 <th>Name</th>
			<th><%= f.text_field(:name) %></th>
		
		</tr>
		
		
		<tr>
			<th>E-mail</th>
			<th><%= f.text_field(:email) %></td>
		</tr>		
		
		<tr>
			 <th>Nick Name</th>
			
			<td><%= f.text_field(:nickname) %></td>
		</tr>
		
		<tr>
			 <th>Password</th>
			
			<td><%= f.password_field(:password) %></td>
		</tr>
		
		<tr>
			 <th>Confirm Password</th>
			
			<td><%= f.password_field(:confirmed_password) %></td>
		</tr>
		
		<tr>
			 <th>External Ref</th>
			
			<td><%= f.text_field(:external_ref) %></td>
		</tr>
		
				
		<tr>
			 <th>Status-Active?</th>
			
			<td><%= f.radio_button(:status,'true') %> Yes
				<%= f.radio_button(:status,'false') %> No
			</td>
					
		</tr>
					
								
	</table>