<!DOCTYPE html>
<html>
<head>
  <title>MessageSystem</title>
  <%= stylesheet_link_tag    "application","public","admin", :media => "all" %>
  <%= javascript_include_tag "jquery-rails.js" %>
  <%= javascript_include_tag "jquery-1.8.0.min" %>
  <%= javascript_include_tag "jquery-ui-1.8.23.custom.min" %>
  <%= javascript_include_tag "messages" %>
  <%= javascript_include_tag "application" %>
  
  <%= csrf_meta_tags %>
</head>
<body>
		
	<div id="main">
		<% if !flash[:notice].blank? %>
		<div class="notice">
		 <%= flash[:notice]%>	
		</div>	
		<% end %>
		<div id="content">
			<%= yield %>
		</div>	
	</div>
	<div id="footer">
		<p id="copyright">Message System</p>
	</div>	
	

</body>
</html>
